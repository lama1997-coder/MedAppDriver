<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Register"
    android:layoutDirection="rtl">

    <androidx.appcompat.widget.Toolbar
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/public_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="Register"
        app:titleTextColor="@android:color/white"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/public_toolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1">
                <ImageView
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:src="@drawable/ic_user"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8">
                <LinearLayout
                    android:layout_marginTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <EditText
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:background="@drawable/edt_bg"
                        android:layout_width="260dp"
                        android:layout_height="45dp"
                        android:hint="phone"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/ic_phone"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_phone"
                        android:inputType="phone"/>
                    <EditText
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:background="@drawable/edt_bg"
                        android:layout_width="260dp"
                        android:layout_height="45dp"
                        android:hint="name"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/ic_reg_user"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_reg_user"
                        android:inputType="phone"/>
                    <EditText
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:background="@drawable/edt_bg"
                        android:layout_width="260dp"
                        android:layout_height="45dp"
                        android:hint="password"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/ic_pass"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_pass"
                        android:inputType="phone"/>
                    <EditText
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:background="@drawable/edt_bg"
                        android:layout_width="260dp"
                        android:layout_height="45dp"
                        android:hint="confirm password"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/ic_pass"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_pass"
                        android:inputType="phone"/>
                    <RelativeLayout
                        android:layoutDirection="rtl"
                        android:layout_marginTop="20dp"
                        android:layout_width="180dp"
                        android:layout_height="45dp"
                        android:background="@drawable/btn_bg">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/ic_go"
                            android:id="@+id/ic_go"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Sign Up"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"/>

                    </RelativeLayout>


                    <LinearLayout
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_marginTop="@dimen/margin_small_size"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Or Login with"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"/>
                        <LinearLayout
                            android:layout_marginTop="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/ic_google"
                                />
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/ic_facebook"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


            </RelativeLayout>
            <RelativeLayout
                android:layoutDirection="ltr"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1">
                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/txtLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Login"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/txt_large_size"
                    android:layout_marginLeft="10dp"/>
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/txtLogin"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:src="@drawable/ic_loginbtn" />
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3"/>

    <RelativeLayout
        android:background="@drawable/top_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/g1">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_large_size"
            android:src="@drawable/ic_google"/>
        <LinearLayout
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تسجيل"
                android:textSize="25sp"/>
            <TextView
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="دخـــــول"
                android:textSize="25sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/g1"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:id="@+id/lay1"
            android:layout_marginTop="@dimen/margin_large_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/margin_large_size">

          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="40dp"
              app:cardCornerRadius="@dimen/margin_small_size"
              android:layout_marginLeft="@dimen/margin_large_size"
              android:layout_marginRight="@dimen/margin_large_size"
              android:layout_marginTop="@dimen/margin_small_size"
              android:layout_marginBottom="@dimen/margin_small_size">
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
                  <ImageView
                      android:id="@+id/img"
                      android:layout_centerVertical="true"
                      android:layout_width="25dp"
                      android:layout_height="25dp"
                      android:src="@drawable/ic_phone"/>
                  <EditText
                      android:id="@+id/phoneNumber"
                      android:singleLine="true"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:hint="رقم الهاتف"
                      android:layout_toLeftOf="@+id/img"
                      android:background="@android:color/transparent"
                      android:layout_marginRight="@dimen/margin_small_size"
                      android:layout_marginLeft="@dimen/margin_small_size"
                      android:inputType="number"
                      android:gravity="center_vertical"
                      />
              </RelativeLayout>
          </androidx.cardview.widget.CardView>
          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="40dp"
              app:cardCornerRadius="@dimen/margin_small_size"
              android:layout_marginLeft="@dimen/margin_large_size"
              android:layout_marginRight="@dimen/margin_large_size"
              android:layout_marginTop="@dimen/margin_small_size"
              android:layout_marginBottom="@dimen/margin_small_size">
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
                  <ImageView
                      android:id="@+id/img10"
                      android:layout_centerVertical="true"
                      android:layout_width="25dp"
                      android:layout_height="25dp"
                      android:src="@drawable/ic_email"/>
                  <EditText
                      android:id="@+id/email"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:hint="الايميل"
                      android:layout_toLeftOf="@+id/img10"
                      android:background="@android:color/transparent"
                      android:singleLine="true"
                      android:layout_marginRight="@dimen/margin_small_size"
                      android:layout_marginLeft="@dimen/margin_small_size"
                      android:inputType="textEmailAddress"
                      android:gravity="center_vertical"
                      />
              </RelativeLayout>
          </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:cardCornerRadius="@dimen/margin_small_size"
                android:layout_marginLeft="@dimen/margin_large_size"
                android:layout_marginRight="@dimen/margin_large_size"
                android:layout_marginTop="@dimen/margin_small_size"
                android:layout_marginBottom="@dimen/margin_small_size">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/img21"
                        android:layout_centerVertical="true"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_blace"/>
                    <EditText
                        android:singleLine="true"
                        android:id="@+id/location"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="العنوان"
                        android:layout_toLeftOf="@+id/img21"
                        android:background="@android:color/transparent"
                        android:layout_marginRight="@dimen/margin_small_size"
                        android:layout_marginLeft="@dimen/margin_small_size"
                        android:gravity="center_vertical"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:cardCornerRadius="@dimen/margin_small_size"
                android:layout_marginLeft="@dimen/margin_large_size"
                android:layout_marginRight="@dimen/margin_large_size"
                android:layout_marginTop="@dimen/margin_small_size"
                android:layout_marginBottom="@dimen/margin_small_size">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/img25"
                        android:layout_centerVertical="true"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_person"/>
                    <Spinner
                        android:id="@+id/gender"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="النوع"
                        android:singleLine="true"
                        android:layout_toLeftOf="@+id/img25"
                        android:background="@android:color/transparent"
                        android:layout_marginRight="@dimen/margin_small_size"
                        android:layout_marginLeft="@dimen/margin_small_size"
                        android:gravity="center_vertical"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:cardCornerRadius="@dimen/margin_small_size"
                android:layout_marginLeft="@dimen/margin_large_size"
                android:layout_marginRight="@dimen/margin_large_size"
                android:layout_marginTop="@dimen/margin_small_size"
                android:layout_marginBottom="@dimen/margin_small_size">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/img2"
                        android:layout_centerVertical="true"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_person"/>
                    <EditText
                        android:id="@+id/fullName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:singleLine="true"
                        android:hint="الاسم"
                        android:layout_toLeftOf="@+id/img2"
                        android:background="@android:color/transparent"
                        android:layout_marginRight="@dimen/margin_small_size"
                        android:layout_marginLeft="@dimen/margin_small_size"
                        android:gravity="center_vertical"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="40dp"
              app:cardCornerRadius="@dimen/margin_small_size"
              android:layout_marginLeft="@dimen/margin_large_size"
              android:layout_marginRight="@dimen/margin_large_size"
              android:layout_marginTop="@dimen/margin_small_size"
              android:layout_marginBottom="@dimen/margin_small_size">
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
                  <ImageView
                      android:id="@+id/img3"
                      android:layout_centerVertical="true"
                      android:layout_width="25dp"
                      android:layout_height="25dp"
                      android:src="@drawable/ic_pass"/>
                  <EditText
                      android:id="@+id/password"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:hint="كلمة المرور"
                      android:singleLine="true"
                      android:layout_toLeftOf="@+id/img3"
                      android:background="@android:color/transparent"
                      android:layout_marginRight="@dimen/margin_small_size"
                      android:layout_marginLeft="@dimen/margin_small_size"
                      android:gravity="center_vertical"
                      />
              </RelativeLayout>
          </androidx.cardview.widget.CardView>
          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="40dp"
              app:cardCornerRadius="@dimen/margin_small_size"
              android:layout_marginLeft="@dimen/margin_large_size"
              android:layout_marginRight="@dimen/margin_large_size"
              android:layout_marginTop="@dimen/margin_small_size"
              android:layout_marginBottom="@dimen/margin_small_size">
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
                  <ImageView
                      android:id="@+id/img4"
                      android:layout_centerVertical="true"
                      android:layout_width="25dp"
                      android:layout_height="25dp"
                      android:src="@drawable/ic_pass"/>
                  <EditText
                      android:id="@+id/confirm_pass"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:hint="كلمة المرور"
                      android:singleLine="true"
                      android:layout_toLeftOf="@+id/img4"
                      android:background="@android:color/transparent"
                      android:layout_marginRight="@dimen/margin_small_size"
                      android:layout_marginLeft="@dimen/margin_small_size"
                      android:gravity="center_vertical"
                      />
              </RelativeLayout>
          </androidx.cardview.widget.CardView>




            <RelativeLayout
                android:onClick="register"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_marginLeft="@dimen/margin_large_size"
                android:layout_marginRight="@dimen/margin_large_size"
                android:layout_marginTop="@dimen/margin_small_size"
                android:layout_marginBottom="@dimen/margin_small_size"
                android:layout_gravity="left">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_bg_10_radius"
                    android:layout_margin="@dimen/margin_small_size">
                    <TextView
                        android:layout_marginLeft="@dimen/margin_normal_size"
                        android:layout_marginRight="@dimen/margin_normal_size"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="تسجيل"
                        android:textStyle="bold"
                        android:textSize="@dimen/txt_normal_size"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/shape_circle_green"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:padding="@dimen/margin_small_size">
                    <LinearLayout
                        android:background="@drawable/shape_back_circle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        >
                        <ImageView
                            android:scaleType="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_arrow_back"/>
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>




        </LinearLayout>

        <LinearLayout
            android:gravity="bottom"
            android:layout_below="@+id/lay1"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_alignParentBottom="true">
            <TextView
                android:layout_margin="@dimen/margin_normal_size"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/cardColor"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/margin_large_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="أو"
                android:textSize="@dimen/txt_large_size"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center_horizontal">
                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="#3B5998"
                    app:cardCornerRadius="@dimen/margin_normal_size"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="@dimen/margin_normal_size">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_face"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="#D44638"
                    app:cardCornerRadius="@dimen/margin_normal_size"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="@dimen/margin_normal_size">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_g"/>
                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <LinearLayout
                android:background="@drawable/bg_new_reg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:gravity="center">
                <ImageView
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_arrow_right48"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>